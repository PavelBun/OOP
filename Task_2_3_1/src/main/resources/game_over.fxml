<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.GameOverController"
      alignment="CENTER"
      spacing="20">

    <Text fx:id="gameOverText" style="-fx-font-size: 24;"/>
    <Text fx:id="scoreText" style="-fx-font-size: 18;"/>
    <Button text="Играть снова"
            onAction="#restartGame"
            style="-fx-font-size: 16; -fx-padding: 10 20;"/>
</VBox>