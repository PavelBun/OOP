<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.LevelSelectionController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #f0f0f0; -fx-padding: 20;">

    <Text text="Выберите уровень" style="-fx-font-size: 24;"/>
    <Button text="Уровень 1" onAction="#startLevel1" style="-fx-font-size: 16; -fx-min-width: 150;"/>
    <Button text="Уровень 2" onAction="#startLevel2" style="-fx-font-size: 16; -fx-min-width: 150;"/>
</VBox>